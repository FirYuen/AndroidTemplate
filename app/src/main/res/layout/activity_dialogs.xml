<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:id="@+id/onel"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/one"
                    android:onClick="shwmsg">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/loader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal"
                        android:textSize="@dimen/keep_title_size"
                        android:text="Show \nMessage"
                        android:textColor="@color/white" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/two"
                    android:layout_alignParentRight="true"
                    android:onClick="shwlmsg">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/FABDownload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal"
                        android:textSize="28sp"
                        android:text="Long Message"
                        android:textColor="@color/white" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/twol"
                android:layout_margin="5dp"
                android:layout_below="@id/onel"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/four"
                    android:onClick="shwlist">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/prog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal"
                        android:textSize="@dimen/keep_title_size"
                        android:text="Show \nList"
                        android:textColor="@color/white" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/six"
                    android:layout_margin="10dp"
                    android:onClick="shwcb">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/FABl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal"
                        android:textSize="@dimen/keep_title_size"
                        android:text="Show \nCheck Box"
                        android:textColor="@color/white" />
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/twol"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="shwrb"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/five">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/tb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal"
                        android:textSize="@dimen/keep_title_size"
                        android:text="Show \nRadioButton"
                        android:textColor="@color/white" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/three"
                    android:layout_margin="10dp"
                    android:onClick="shwet">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/FABRev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal"
                        android:textSize="@dimen/keep_title_size"
                        android:text="Show \nEdit\nText"
                        android:textColor="@color/white" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>

