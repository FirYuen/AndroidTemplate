<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/onel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.CardView
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:onClick="FABMenu"
                    app:cardBackgroundColor="@color/one">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/loader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="FAB \nMenu"
                        android:textColor="@color/white"
                        android:textSize="@dimen/keep_title_size"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:elevation="4dp"
                    android:onClick="FABDownload"
                    app:cardBackgroundColor="@color/two">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/FABDownload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="FAB \nDownload "
                        android:textColor="@color/white"
                        android:textSize="@dimen/keep_title_size"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/twol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/onel"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="4dp"
                    android:onClick="FABProgress"
                    app:cardBackgroundColor="@color/four">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/prog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="FAB \nProgress"
                        android:textColor="@color/white"
                        android:textSize="@dimen/keep_title_size"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="4dp"
                    android:onClick="FabLoader"
                    app:cardBackgroundColor="@color/three">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="FAB \nLoader"
                        android:textColor="@color/white"
                        android:textSize="@dimen/keep_title_size"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal" />
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/twol"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="4dp"
                    android:onClick="FABToolbar"
                    app:cardBackgroundColor="@color/five">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/tb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="FAB \nToolbar"
                        android:textColor="@color/white"
                        android:textSize="@dimen/keep_title_size"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="4dp"
                    android:onClick="FABReveal"
                    app:cardBackgroundColor="@color/fab">

                    <me.arulnadhan.robototextview.widget.RobotoTextView
                        android:id="@+id/FABRev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="FAB \nReveal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/keep_title_size"
                        app:fontFamily="roboto_slab"
                        app:textWeight="normal" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
